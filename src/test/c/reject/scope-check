configuration:
    Height: 250;
    Width : 250;
    States: {first, second};
    Frontier : Mirror;
    Colors : { #FF00FF, #00FF00};
    
transition:
    if first == 0 then
        a =9;
    end 

    x =a;

    for i in [1,3] do
        if (0,i)==first && (i,0)==second then
            ->first
        else
            ->second
        end
    end
